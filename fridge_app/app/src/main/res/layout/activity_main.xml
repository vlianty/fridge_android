<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">


    <EditText
        android:id="@+id/idEditSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/card_color"
        android:hint="Search..."
        android:inputType="textCapCharacters"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/white_grey"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btndrawer"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_above="@+id/buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:backgroundTint="#ECC0C4"
        android:text="Manage Goods"
        android:textColor="#4E5155"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                >


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnNewOrder"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="New Order"
                    android:backgroundTint="#ECC0C4"
                    android:textColor="#4E5155"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/changeProgram"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:text="Change Program"
                    android:backgroundTint="#ECC0C4"
                    android:textColor="#4E5155"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnProgress"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="Progress Query"
                    android:backgroundTint="#ECC0C4"
                    android:textColor="#4E5155"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:text="Settings"
                    android:backgroundTint="#ECC0C4"
                    android:textColor="#4E5155"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnContactService"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:text="Contact Service"
                    android:backgroundTint="#ECC0C4"
                    android:textColor="#4E5155"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnMaintenance"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:text="maintenance"
                    android:backgroundTint="#ECC0C4"
                    android:textColor="#4E5155"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </GridLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="314dp"
        android:layout_marginBottom="537dp"
        android:text="Inform"
        android:backgroundTint="#ECC0C4"
        android:textColor="#4E5155"
        />


</RelativeLayout>


